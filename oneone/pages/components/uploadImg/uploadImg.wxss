/* pages/components/uploadImg/uploadImg.wxss */
.ui_uploader_cell{
  width: 400rpx; height: 225rpx;overflow: hidden; position: relative; margin: 0 auto;
}
.ui_uploader_item image{
  width: 400rpx; height: 225rpx; display: block;
}
.ui_uploader_item_icon{
  position: absolute; z-index: 333;
}
.ui_uploader_item{
  width: 400rpx; height: 225rpx; 
}
.ui_uploader{
   width: 400rpx; height: 225rpx;  border: 1rpx dashed #ccc; box-sizing: border-box; position: relative
}
.ui_uploader::before{
  position: absolute; height: 50rpx; content: '';border: 2rpx dashed #ccc; left: 50%; margin-right: -200rpx;
  top: 50%; margin-top: -25rpx;
}

.ui_uploader::after{
  position: absolute; width: 50rpx; content: '';border: 2rpx dashed #ccc; left: 50%; margin-left: -25rpx;
  top: 50%; margin-top: -1rpx;
}
