@import "../../../static/css/flex";

.pages-view {
  padding-top: 128rpx; overflow: hidden; position: relative;
}

.info {
  height: 118rpx;
}

.portrait {
  width: 118rpx;
  margin: 0 26rpx;
  height: 118rpx;
}

.portrait image {
  width: 118rpx;
  border-radius: 50%;
  height: 118rpx;
}

.message-info image {
  width: 34rpx;
  height: 39rpx;
  padding-top: 8rpx;
}

.nameInfo {
  padding: 8rpx 0;
  box-sizing: border-box;
  width: 100%;
}

.nameInfo text {
  color: #fff;
}

.message-info image {
  padding-left: 8rpx;
}

.nameInfo text:nth-child(1) {
  font-size: 36rpx;
}

.nameInfo text:nth-child(2) {
  font-size: 28rpx;
}

.background {
  width: 100%;
  height: 573rpx;
  top: 0;
  position:absolute;
  background-size: 100% 100%;
  z-index: -1;
}

swiper {
  padding-top: 30px;
}

.le-img {
  width: 100%;
  display: block;
  box-shadow: 1rpx 3rpx 8rpx 0px rgba(232, 240, 249, 1);
  border-radius: 10rpx;
  transform: scale(0.8);
  transition: all 0.3s ease; background: #fff
}

.le-img.le-active {
  transform: scale(1);
}

.boxview {
  text-align: center;
}

.title {
  background: rgba(255, 178, 91, 1);
  height: 74rpx;
  line-height: 74rpx; color: #fff;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
}

.money {
  height: 80rpx;
  font-size: 40rpx; line-height: 80rpx;
  color: rgba(255, 178, 91, 1); padding: 20rpx 0;
 
}
.clicl{
  color: #333333; font-size: 24rpx; padding: 15rpx 0; border-top:1px solid #F6F6F6;
}

.my-use{
  padding: 0 30rpx; margin-top: 26rpx;}
.right-img{
  width: 36rpx; height: 36rpx; margin-left: 35rpx;
}
.right-img image{
  width: 16rpx; height: 32rpx; margin-top: 2rpx;
}
.use-text{
  font-size: 28rpx;
}
.use-img{
  width: 36rpx; height: 36rpx; margin-right: 35rpx;
}
.use-item{
  color: #333333;font-size: 28rpx; padding: 25rpx 0; border-bottom: 2rpx solid #F6F6F6;
}
.use-item view:nth-child(2){
  width: 100%;
}
