@import "../../../static/css/flex";

page {
  background: #f6f6f6;
}

.pages-hand {
  height: 70rpx;
  background: #fff;
}

.hand-select image {
  width: 11rpx;
  padding-left: 12rpx;
  height: 11rpx;
}

.hand-add {
  font-size: 24rpx;
  color: #3b99fa;
}

.hand-select {
  color: #666;
  font-size: 24rpx;
}

.hand-add image {
  width: 30rpx;
  padding-right: 12rpx;
  height: 30rpx;
}

.item-content {
  padding: 32rpx;
  box-sizing: border-box;
}

.item {
  background: #fff;
  /* height: 265rpx; */
  box-shadow: 0px 0px 10rpx 0px rgba(239, 239, 239, 1); margin-bottom: 30rpx;
  border-radius: 12rpx;
}

.item view {
  box-sizing: border-box;
}

.title {
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
  padding: 30rpx 30rpx 18rpx;
}

.name {
  color: #666;
  font-size: 24rpx;
  padding: 0 30rpx;
}

.monney {
  font-size: 40rpx;
  padding: 11rpx 30rpx 15rpx;
}

.monney text {
  font-size: 21rpx;
}

.valBtn {
  padding: 0 30rpx;  height: 89rpx;
  border-top: 1rpx solid #e5e5e5;
}

.valBtn-left {
  font-size: 24rpx;
}

.valBtn-right, .valBtn-right button {
   width: 160rpx;
  height: 50rpx;border-radius:25rpx;
}

.valBtn-right button {

  padding: 0;
  text-align: center;
  color: #fff;
  font-size: 24rpx;

  line-height: 50rpx;
}
.valBtn-right button:not([size='mini']) {
  /* 修改宽高 */
  width: 100%;
}
.bg-success{
  background: #73E1B9
}
.bg-erro{
  background: #FA5151
}
.success{
  color: #73E1B9;
}
.awite{
  color: #FFB25B;
}
.erro{
  color: #FA5151;
}
