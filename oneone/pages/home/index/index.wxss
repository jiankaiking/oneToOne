/* pages/home/index/index.wxss */
@import '../../../static/css/flex';

page {
  background: #f6f6f6;
}

.home-content-title {
  padding: 25rpx 0;
}

.menu-img {
  width: 88rpx;
  height: 88rpx;
  padding: 25rpx;
}

.home-content {
  width: 100%;
  border-radius: 0 0 180rpx 180rpx;
  background: linear-gradient(rgba(59, 153, 250, 1) 100%, rgba(120, 187, 255, 1) 0%);
  color: #fff;
  height: 530rpx;
}

.home-content-title {
  font-size: 28rpx;
}

.bannner {
  height: 312rpx;
  margin-bottom: 30rpx;
  background: rgba(222, 222, 222, 1);
  border-radius: 20rpx;
}

.bannner image {
  width: 100%;
  height: 312rpx;
}

.home-menu {
  background: #fff;
  border-radius: 20rpx;
  height: 200rpx;
}

.menu-item text {
  color: #333;
  font-size: 28rpx;
}

.news-content {
  padding-top: 100rpx;
}

.news-title {
  color: #333;
  font-size: 28rpx;
  padding: 25rpx 30rpx;
}

.new-item {
  background: #fff;
  color: #333;
  margin-bottom: 32rpx;
}

.new-img view {
  width: 206rpx;
  height: 130rpx;
  background: #d8d8d8;
}

.new-img view image {
  width: 206rpx;
  height: 130rpx;
}

.new-item-title {
  font-size: 32rpx;
  padding: 25rpx 0;
}

.new-info {
  font-size: 24rpx;
  padding-top: 20rpx;
}

.new-date {
  font-size: 20rpx;
  padding: 18rpx 0;
}
