/* pages/home/messages/messages.wxss */
@import '../../../static/css/flex';

page {
  background: #f6f6f6;
}

.top-tabcad {
  background: #fff;
  height: 87rpx;
}

.card-item {
  position: relative;
  color: #999;
  font-size: 32rpx;
  font-weight: 600;
}

.card-item::after {
  position: absolute;
  content: "";
  width: 100%;
  height: 8rpx;
  background: #fff;
  bottom: -22rpx;
  left: 0;
}

.img-icon {
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-right: 10rpx;
}

.card-item.active::after {
  background: #3b99fa;
}

.card-item.active {
  color: #3b99fa;
}

.messages-item {
  background: #fff;
  box-shadow: 0px 0px 10px 0px rgba(239, 239, 239, 1);
  border-radius: 12rpx;
  margin-bottom: 32rpx;
}

.item-top {
  padding-top: 28rpx;
}

.top-left-text {
  font-size: 32rpx;
  color: #333;
}

.top-right-text {
  font-size: 24rpx;
  color: #666;
}

.center-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 18rpx;
}

.center-money {
  color: #ffb25b;
  font-size: 40rpx;
  margin: 12rpx 0;
}

.center-money text {
  font-size: 20rpx;
}

.top-right-text image {
  height: 22rpx;
  width: 14rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.bottom-time {
  padding: 19rpx 30rpx;
  font-size: 24rpx;
  color: #666;
  border-top: 1rpx solid #e5e5e5;
}

.bottom-time .top-left-text {
  color: #ffb25b;
  font-size: 24rpx;
}

.top-right-text button {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  background: #ffb25b;
  font-size: 24rpx;
  border-radius: 25rpx;
}
.messages-content{
  margin-top: 30rpx;
}

.bg-success{
  background: #73E1B9
}
.bg-erro{
  background: #FA5151
}
.success{
  color: #73E1B9;
}
.awite{
  color: #FFB25B;
}
.erro{
  color: #FA5151;
}