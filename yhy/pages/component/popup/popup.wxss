/* component/popup.wxss */

.wx-popup {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}

.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 560px;
  border-radius: 8rpx;
  max-width: 600rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%);
  overflow: hidden;
  background: #fff;
}

.wx-popup-title {
  width: 100%;
  padding: 20rpx;
  text-align: center; box-sizing: border-box;
  font-size: 34rpx;
  color: #333;
}

.wx-popup-con {
  margin: 30rpx 10rpx;
  text-align: center;
}

.wx-popup-btn {
  display: flex;
  justify-content: space-around;
}

.wx-popup-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%; color: #3B99FA; font-size: 36rpx;
  height: 100rpx;
  border-top: 1rpx solid rgba(229,229,229,1);
}
